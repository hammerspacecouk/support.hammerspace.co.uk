    <h2 id="supporters">Supporters</h2>
    {% if hasResults %}
        <ol start="{{ resultStartNumber }}">
        {% for payment in payments %}
            <li>
                <h3>{{ payment.name }}</h3>
                <p>{{ payment.date }}</p>
                {% if payment.message %}
                    <p>{{ payment.message }}</p>
                {% endif %}
            </li>
        {% endfor %}
        </ol>
    {% else %}
        <p>No supporters yet</p>
    {% endif %}

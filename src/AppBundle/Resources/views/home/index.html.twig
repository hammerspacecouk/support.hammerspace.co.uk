{% extends 'AppBundle::base.html.twig' %}
{% block body %}

    <form action="{{ formAction }}" method="POST">
        <div>
        <label>
            Name:
            <input type="text" name="name" maxlength="30" />
        </label>
        </div>
        <div>
        <label>
            Amount:
            <input type="number" name="amount" min="1" step="0.01" />
        </label>
        </div>
        <div>
        <label>
            Message:
            <input type="text" name="message" maxlength="100" />
        </label>
        </div>
        <div>
            <button type="submit">Submit</button>
        </div>
    </form>
    <h3>Notes:</h3>
    <ul>
        <li>Your payment or e-mail information will not be stored by hammerspace</li>
        <li>This is a donation. Do not expect anything specific in return or any refunds</li>
    </ul>


